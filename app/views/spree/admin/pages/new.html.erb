<% content_for :page_title do %>
  <%= Spree.t(:new_page) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_pages_list), collection_url, icon: 'arrow-left' %>
  </li>
<% end %>

<div data-hook="admin_page_new_form_header">
  <%= render partial: 'spree/shared/error_messages', locals: { target: @page } %>
</div>

<div data-hook="admin_page_new_form">
  <%= form_for [:admin, @page] do |f| %>
    <%= render partial: 'form', locals: { f: f } %>

    <div data-hook="admin_page_new_form_buttons">
      <%= render partial: 'spree/admin/shared/new_resource_links' %>
    </div>
  <% end %>
</div>